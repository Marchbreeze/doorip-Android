                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="12dp"
                        android:progressDrawable="@drawable/layer_list_trip_friends_progress_bar"
                        android:scaleX="-1"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_check_friends_preference_3_title" />

                    <TextView
                        android:id="@+id/tv_check_friends_preference_3_left"
                        style="@style/TextAppearance.Doorip.Detail2.Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/check_friends_preference_3_left"
                        android:textColor="@color/gray_700"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/progress_bar_check_friends_3" />

                    <TextView
                        android:id="@+id/tv_check_friends_preference_3_right"
                        style="@style/TextAppearance.Doorip.Detail2.Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/check_friends_preference_3_right"
                        android:textColor="@color/gray_700"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/progress_bar_check_friends_3" />

                    <LinearLayout

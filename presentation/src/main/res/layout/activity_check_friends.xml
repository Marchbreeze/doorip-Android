                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layerType="software"
                            android:src="@drawable/shape_line_gray100_fill_dash_5" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_check_friends_preference_4_title"
                        style="@style/TextAppearance.Doorip.Body3.Bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/check_friends_preference_4_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_trip_friends_dash_3" />

                    <ProgressBar
                        android:id="@+id/progress_bar_check_friends_4"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="12dp"
                        android:progressDrawable="@drawable/layer_list_trip_friends_progress_bar"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_check_friends_preference_4_title" />

                    <ProgressBar
                        android:id="@+id/progress_bar_check_friends_4_revert"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="12dp"
                        android:progressDrawable="@drawable/layer_list_trip_friends_progress_bar"
                        android:scaleX="-1"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_check_friends_preference_4_title" />

                    <TextView
                        android:id="@+id/tv_check_friends_preference_4_left"
                        style="@style/TextAppearance.Doorip.Detail2.Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/check_friends_preference_4_left"
                        android:textColor="@color/gray_700"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/progress_bar_check_friends_4" />

                    <TextView
                        android:id="@+id/tv_check_friends_preference_4_right"
                        style="@style/TextAppearance.Doorip.Detail2.Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/check_friends_preference_4_right"
                        android:textColor="@color/gray_700"

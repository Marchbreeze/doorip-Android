                        android:paddingVertical="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_check_friends_preference_1_right">

                        <ImageView
                            android:id="@+id/iv_trip_friends_dash_1"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layerType="software"
                            android:src="@drawable/shape_line_gray100_fill_dash_5" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_check_friends_preference_2_title"
                        style="@style/TextAppearance.Doorip.Body3.Bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/check_friends_preference_2_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_trip_friends_dash_1" />


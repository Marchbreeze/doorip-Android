<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Doorip" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="Theme.Doorip" parent="Base.Theme.Doorip" />

    <!-- EditText Style -->
    <style name="cursor_color" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/gray_700</item>
    </style>

    <style name="edit_text_style" parent="Widget.AppCompat.EditText">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/gray_700</item>
        <item name="boxBackgroundColor">@color/white_000</item>
        <item name="android:buttonCornerRadius">4dp</item>
        <item name="android:theme">@style/cursor_color</item>
    </style>

    <!-- Button Style -->
    <style name="button_style" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/TextAppearance.Doorip.Body2.Bold</item>
        <item name="android:buttonCornerRadius">46dp</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:radius">40dp</item>
        <item name="badgeRadius">40dp</item>
    </style>

    <!-- Toolbar Style -->
    <style name="toolbar_style" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Doorip.Body1.Bold</item>
        <item name="android:titleTextColor">@color/black_000</item>
        <item name="android:background">@color/white_000</item>
    </style>

    <!-- Radio Button Style -->
    <style name="radio_button_style" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">17dp</item>
        <item name="android:layout_marginVertical">6dp</item>
    </style>
</resources>
